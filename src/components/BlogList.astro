---
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");

const posts = allPosts
  .filter(({ data }) => !data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);

const totalCount = allPosts.filter(({ data }) => !data.draft).length;
---

<section class="blog" id="blog">
  <div class="content">
    <div class="header">
      <div>
        <p class="eyebrow">Blog</p>
        <h2 class="section-title">
          Latest Blog Posts
          <span class="count">({totalCount})</span>
        </h2>
        <p class="section-desc">
          Thoughts, insights, and tutorials on game development, design, and
          technology.
        </p>
      </div>
      <a class="cta" href="/blog">
        See All
        <span aria-hidden="true">â†—</span>
      </a>
    </div>

    <div class="posts">
      {
        posts.map((post) => (
          <a href={`/blog/${post.slug}/`} class="post-card">
            <div class="meta">
              <span class="date">
                {post.data.publishDate.toLocaleDateString("vi-VN", {
                  year: "numeric",
                  month: "short",
                  day: "2-digit",
                })}
              </span>
              {post.data.tags.length ? (
                <div class="tags">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                  {post.data.tags.length > 2 && (
                    <span class="tag">+{post.data.tags.length - 2}</span>
                  )}
                </div>
              ) : null}
            </div>
            <h3 class="title">{post.data.title}</h3>
            <p class="description">{post.data.description}</p>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .blog {
    padding: 6rem 2rem;
    display: flex;
    justify-content: center;
  }

  .content {
    max-width: 900px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .eyebrow {
    color: var(--ctp-mauve);
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--ctp-text);
    margin-bottom: 0.3rem;
  }

  .section-desc {
    color: var(--ctp-subtext0);
    max-width: 620px;
  }

  .count {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--ctp-subtext0);
  }

  .cta {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.65rem 1rem;
    border: 2px solid var(--ctp-lavender);
    border-radius: 999px;
    color: var(--ctp-text);
    text-decoration: none;
    background-color: var(--ctp-surface0);
    transition: all 0.3s ease;
  }

  .cta:hover {
    background-color: var(--ctp-lavender);
    color: var(--ctp-base);
    transform: translateY(-2px);
  }

  .posts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1rem;
  }

  .post-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.5rem;
    border-radius: 14px;
    background: linear-gradient(
      145deg,
      rgba(87, 91, 124, 0.16),
      rgba(87, 91, 124, 0.08)
    );
    border: 1px solid var(--ctp-surface1);
    text-decoration: none;
    color: var(--ctp-text);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.18);
    transition:
      transform 0.2s ease,
      border-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--ctp-lavender);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    color: var(--ctp-subtext0);
    font-size: 0.9rem;
  }

  .date {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    background-color: var(--ctp-surface0);
    border: 1px solid var(--ctp-surface1);
    padding: 0.25rem 0.65rem;
    border-radius: 999px;
  }

  .tags {
    display: inline-flex;
    gap: 0.35rem;
    flex-wrap: wrap;
  }

  .tag {
    padding: 0.25rem 0.65rem;
    border-radius: 999px;
    background-color: rgba(244, 219, 244, 0.08);
    border: 1px solid var(--ctp-pink);
    color: var(--ctp-pink);
    font-size: 0.85rem;
  }

  .title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--ctp-text);
  }

  .description {
    color: var(--ctp-subtext0);
    line-height: 1.5;
  }

  @media (max-width: 720px) {
    .blog {
      padding: 4.5rem 1.5rem;
    }

    .header {
      flex-direction: column;
      align-items: flex-start;
    }

    .posts {
      grid-template-columns: 1fr;
    }
  }
</style>
