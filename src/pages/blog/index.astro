---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const posts = (await getCollection("blog"))
  .filter(({ data }) => !data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

const totalCount = posts.length;
const tagCounts = posts.reduce<Record<string, number>>((acc, post) => {
  post.data.tags?.forEach((tag) => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {});

const allTags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count }));
---

<Layout title="Blog — Catppuccin notes">
  <main class="page" id="main-content">
    <section class="hero">
      <p class="eyebrow">Blog</p>
      <h1>All Blog Posts</h1>
      <p class="lead">
        Thoughts, insights, and tutorials on game development, design, and
        technology.
      </p>
      <div class="stats">
        <span class="pill">Tổng bài: {totalCount}</span>
        <span class="pill">Tags: {allTags.length}</span>
      </div>
      {
        allTags.length ? (
          <div class="tag-cloud" id="tag-cloud" aria-label="Lọc theo tag">
            <button class="tag-btn active" data-tag="all" type="button">
              Tất cả
            </button>
            {allTags.map(({ tag, count }) => (
              <button class="tag-btn" data-tag={tag} type="button">
                {tag} <span class="pill-sm">{count}</span>
              </button>
            ))}
          </div>
        ) : null
      }
    </section>

    <section class="list">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.slug}/`}
            class="post-card"
            data-tags={post.data.tags.join(",")}
          >
            <div class="meta">
              <span class="date">
                {post.data.publishDate.toLocaleDateString("vi-VN", {
                  year: "numeric",
                  month: "short",
                  day: "2-digit",
                })}
              </span>
              {post.data.tags.length ? (
                <div class="tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              ) : null}
            </div>
            <h2 class="title">{post.data.title}</h2>
            <p class="description">{post.data.description}</p>
          </a>
        ))
      }
    </section>
  </main>
</Layout>

<style>
  .page {
    padding: 5rem 1.5rem 6rem;
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .hero {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .eyebrow {
    color: var(--ctp-mauve);
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-size: 0.85rem;
  }

  h1 {
    font-size: 2.3rem;
    color: var(--ctp-text);
    line-height: 1.2;
  }

  .lead {
    color: var(--ctp-subtext0);
    max-width: 680px;
  }

  .stats {
    display: inline-flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .pill {
    padding: 0.3rem 0.75rem;
    border-radius: 999px;
    background-color: var(--ctp-surface0);
    border: 1px solid var(--ctp-surface1);
    color: var(--ctp-subtext0);
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tag-btn {
    padding: 0.4rem 0.9rem;
    border-radius: 999px;
    border: 1px solid var(--ctp-surface1);
    background-color: var(--ctp-surface0);
    color: var(--ctp-text);
    cursor: pointer;
    transition: all 0.15s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }

  .tag-btn:hover {
    border-color: var(--ctp-sapphire);
    color: var(--ctp-sapphire);
  }

  .tag-btn.active {
    border-color: var(--ctp-mauve);
    background-color: rgba(203, 166, 247, 0.18);
    color: var(--ctp-mauve);
  }

  .pill-sm {
    padding: 0.1rem 0.4rem;
    border-radius: 999px;
    background-color: var(--ctp-surface1);
    color: var(--ctp-subtext0);
    font-size: 0.85rem;
    border: 1px solid var(--ctp-surface2);
  }

  .list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-card {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    padding: 1.5rem;
    border-radius: 16px;
    text-decoration: none;
    color: var(--ctp-text);
    background: linear-gradient(
      150deg,
      rgba(148, 226, 213, 0.06),
      rgba(148, 226, 213, 0.02)
    );
    border: 1px solid var(--ctp-surface1);
    transition:
      transform 0.2s ease,
      border-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-3px);
    border-color: var(--ctp-sapphire);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.22);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    color: var(--ctp-subtext0);
    font-size: 0.95rem;
  }

  .date {
    padding: 0.3rem 0.75rem;
    border-radius: 999px;
    background-color: var(--ctp-surface0);
    border: 1px solid var(--ctp-surface1);
  }

  .tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  .tag {
    padding: 0.25rem 0.65rem;
    border-radius: 999px;
    border: 1px solid var(--ctp-pink);
    color: var(--ctp-pink);
    background-color: rgba(245, 194, 231, 0.08);
    font-size: 0.9rem;
  }

  .title {
    font-size: 1.35rem;
    font-weight: 700;
    color: var(--ctp-text);
  }

  .description {
    color: var(--ctp-subtext0);
    line-height: 1.5;
  }

  @media (max-width: 640px) {
    .page {
      padding: 4rem 1.25rem 5rem;
    }

    h1 {
      font-size: 1.9rem;
    }
  }
</style>

<script>
  const buttons = Array.from(document.querySelectorAll(".tag-btn"));
  const cards = Array.from(document.querySelectorAll(".post-card"));

  const setActive = (tag, shouldUpdateUrl = false) => {
    const normalized = buttons.some((b) => b.dataset.tag === tag) ? tag : "all";

    buttons.forEach((btn) => {
      btn.classList.toggle("active", btn.dataset.tag === normalized);
    });

    cards.forEach((card) => {
      const cardTags = card.dataset.tags ? card.dataset.tags.split(",") : [];
      const match = normalized === "all" || cardTags.includes(normalized);
      card.style.display = match ? "flex" : "none";
    });

    if (shouldUpdateUrl) {
      const url = new URL(window.location.href);
      if (normalized === "all") {
        url.searchParams.delete("tag");
      } else {
        url.searchParams.set("tag", normalized);
      }
      window.history.replaceState({}, "", url);
    }
  };

  buttons.forEach((btn) => {
    btn.addEventListener("click", () => setActive(btn.dataset.tag, true));
  });

  // Auto-apply tag from query ?tag=...
  const params = new URL(window.location.href).searchParams;
  const initialTag = params.get("tag") || "all";
  setActive(initialTag, false);
</script>
